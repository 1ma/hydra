{
    "name": "uma/hydra",
    "description": "Bulk HTTP client based on the multi cURL handler",
    "license": "MIT",
    "type": "library",
    "require": {
        "php": ">=7.1",
        "ext-curl": "*",
        "nyholm/psr7": "^1.1",
        "psr/http-message": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.5"
    },
    "autoload": {
        "psr-4": {
            "UMA\\Hydra\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "UMA\\Hydra\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": [
            "docker-compose up -d",
            "docker-compose exec -T php-7.1 sh -c \"phpunit --testdox\"",
            "docker-compose exec -T php-7.2 sh -c \"phpunit --testdox\"",
            "docker-compose exec -T php-7.3 sh -c \"php -dzend_extension=/usr/lib/php/xdebug.so /usr/local/bin/phpunit --testdox\""
        ],
        "metrics": [
            "@test",
            "docker-compose exec -T php-7.3 sh -c \"phpmetrics --junit=./build/phpunit/junit.xml --report-html=./build/phpmetrics .\""
        ],
        "cleanup": "docker-compose down -v"
    },
    "config": {
        "sort-packages": true
    }
}
